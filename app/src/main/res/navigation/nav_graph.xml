<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/roomsFragment">
    <fragment
        android:id="@+id/roomsFragment"
        android:name="de.smarthome.server.ui.HomeOverviewFragment"
        android:label="fragment_rooms"
        tools:layout="@layout/fragment_home_overview" >
        <action
            android:id="@+id/action_roomsFragment_to_roomOverviewFragment"
            app:destination="@id/roomOverviewFragment" />
        <action
            android:id="@+id/action_roomsFragment_to_optionsFragment"
            app:destination="@id/optionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="de.smarthome.server.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_roomsFragment"
            app:destination="@id/roomsFragment"
            app:popUpTo="@id/roomsFragment" />
    </fragment>
    <fragment
        android:id="@+id/optionsFragment"
        android:name="de.smarthome.server.ui.OptionsFragment"
        android:label="fragment_options"
        tools:layout="@layout/fragment_options" />
    <fragment
        android:id="@+id/roomOverviewFragment"
        android:name="de.smarthome.server.ui.RoomOverviewFragment"
        android:label="fragment_room_overview"
        tools:layout="@layout/fragment_room_overview" >
        <action
            android:id="@+id/action_roomOverviewFragment_to_regulationFragment"
            app:destination="@id/regulationFragment" />
        <argument android:name="IDSelectedRoom"
            app:argType="string"
            android:defaultValue="-1" />
        <argument android:name="NameSelectedRoom"
            app:argType="string"
            android:defaultValue="Default" />

    </fragment>
    <fragment
        android:id="@+id/regulationFragment"
        android:name="de.smarthome.server.ui.RegulationFragment"
        android:label="fragment_regulation"
        tools:layout="@layout/fragment_regulation_number" >
        <argument android:name="selectedFunctionUID"
            app:argType="string"
            android:defaultValue="-1" />
        <argument
            android:name="nameSelectedRoom"
            app:argType="string"
            android:defaultValue="Default" />
    </fragment>
</navigation>