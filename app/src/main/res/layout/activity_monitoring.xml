<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.smarthome.beacons.BeaconMonitoringActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="Monitoring Events:" />

    <EditText
        android:id="@+id/monitoringText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="106dp"
        android:ems="10"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        tools:ignore="LabelFor,RtlHardcoded"
        android:autofillHints="Bigos">
        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onRangingClicked"
        android:layout_below="@+id/monitoringText"
        android:text="Start Monitoring" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onEnableClicked"
        android:layout_below="@+id/monitoringText"
        android:layout_toRightOf="@id/startButton"
        android:text="Stop Monitoring" />

</RelativeLayout>
